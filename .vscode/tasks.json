{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build Project with Makefile",
            "command": "make",
            "args": [
                "all"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compiles the entire project using Makefile with organized directory structure."
        },
        {
            "type": "shell",
            "label": "Clean and Build Project",
            "command": "make",
            "args": [
                "rebuild"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": "build",
            "detail": "Cleans and recompiles the entire project using Makefile."
        },
        {
            "type": "shell",
            "label": "Run Project",
            "command": "make",
            "args": [
                "run"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "detail": "Compiles and runs the project."
        }
    ]
}